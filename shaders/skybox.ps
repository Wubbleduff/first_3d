TextureCube my_texture;
SamplerState sample_type;

cbuffer global_buffer
{
  matrix world_m_model;
  matrix view_m_world;
  matrix clip_m_view;
};

struct PSInput
{
  float4 position : SV_POSITION;
  float3 modelspace_position : VIEW_POSITION;
};

float4 skybox_pixel_shader(PSInput input) : SV_TARGET
{
  float4 color;

  float3 view_vector = input.modelspace_position;
  view_vector = normalize(view_vector);
  color = my_texture.Sample(sample_type, view_vector);


  return color;
}
